# Copy this file to .env and update with your actual values

# WebSocket endpoint for real-time communication
WS_ENDPOINT=ws://localhost:8080/ws

# Weather API URL
WEATHER_API_URL=https://api.met.no/weatherapi/locationforecast/2.0/compact?lat=12.345&lon=12.345

# Train API URL
TRAIN_API_URL=https://api.digitransit.fi/routing/v1/routers/hsl/index/graphql?digitransit-subscription-key=xxxxxxxxxxxxxxxxxxxxxxxx

# InfluxDB configuration
INFLUX_URL=http://localhost:8086
INFLUX_TOKEN=your_influx_token_here

# Google Calendar ICS URL (Public calendar feed)
# To get this URL:
# 1. Go to Google Calendar
# 2. Click the three dots next to your calendar
# 3. Select "Settings and sharing"
# 4. Copy the "Secret address in iCal format" URL
GOOGLE_CALENDAR_ICS_URL=https://calendar.google.com/calendar/ical/.../basic.ics

# Optional: Custom calendar API URL (if using external service)
# CALENDAR_API_URL=https://your-calendar-api.com/events